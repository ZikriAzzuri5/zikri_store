<%= form_for product do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: 'Name', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :price, 'Price in Rupiah' %>
    <%= form.text_field :price, placeholder: 'Price', class: 'form-control js-rupiah' %>
    <%= form.hidden_field :price, placeholder: 'Price', class: 'form-control js-rupiah-real' %>
  </div>
  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, options_for_select(category_options, product.category_id), {include_blank: true}, class: 'form-control', name: 'product[category_id]' %>
  </div>
  <div class="form-group">
    <%= form.label :descriptions %>
    <%= form.text_area :descriptions, placeholder: 'Description', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :stock %>
    <%= form.number_field :stock, placeholder: 'Stock', class: 'form-control' %>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit 'Submit', class: 'btn btn-success' %>
<% end %>