<%= form_tag sessions_path(redirect_to: params[:redirect_to]), class: 'form-signin' do %>
  <h1 style='text-align: center;'>&sect; Azzuri Store</h1>
  <hr />
  <h1 class="h3 mb-3 font-weight-normal" style='text-align: center;'>Login</h1>
  <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control' %>
  <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
  <div class="checkbox mb-3"><%= link_to 'Forgot Password?', forgot_sessions_path %></div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
<% end %>