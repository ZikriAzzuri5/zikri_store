<%= form_for @user, url: update_password_session_path(params[:id]), html: { class: 'form-signin' } do |f| %>
  <h1 style='text-align: center;'>&sect; Azzuri Store</h1>
  <hr />
  <h1 class="h3 mb-3 font-weight-normal" style='text-align: center;'>Update Your Password</h1>
  <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
  <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>
  <%= f.submit 'Update', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>